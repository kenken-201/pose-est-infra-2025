# -----------------------------------------------------------------------------
# Cloudflare Infrastructure Environment Variables
# -----------------------------------------------------------------------------
# Copy this file to .env and fill in your actual values.
# .env is gitignored to protect sensitive information.
# -----------------------------------------------------------------------------

# Cloudflare API Credentials
# Create a token with: Zone:Edit, DNS:Edit, Workers:Edit, R2:Edit
CLOUDFLARE_API_TOKEN=

# Account ID (found in Cloudflare Dashboard URL)
CLOUDFLARE_ACCOUNT_ID=

# R2 Access Keys (For Terraform Backend and Application use)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# R2 Endpoint (optional, for verification scripts)
R2_ENDPOINT_URL=

# Zone ID (used by Terraform via TF_VAR_ prefix)
TF_VAR_CLOUDFLARE_ZONE_ID=""

# Cloud Run Backend URL (optional, for VITE_API_URL injection)
TF_VAR_api_target=""
